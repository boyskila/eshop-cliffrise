---
import { getTranslations } from '@utils/i18'
import { Route, DollarSign, Mountain, Award } from '@lucide/astro'

const { impact } = getTranslations(Astro.params.lang)
const {
  routesFunded,
  routesFundedDesc,
  contributed,
  contributedDesc,
  locations,
  locationsDesc,
  climbersImpacted,
  climbersImpactedDesc,
  completed,
  description,
  funded,
  latestProject,
  projectDescription,
  title,
  routes,
} = impact

const stats = [
  {
    icon: Route,
    value: '47',
    label: routesFunded,
    description: routesFundedDesc,
  },
  {
    icon: DollarSign,
    value: '$23,500',
    label: contributed,
    description: contributedDesc,
  },
  {
    icon: Mountain,
    value: '12',
    label: locations,
    description: locationsDesc,
  },
  {
    icon: Award,
    value: '850+',
    label: climbersImpacted,
    description: climbersImpactedDesc,
  },
]
---

<section
  id="impact"
  aria-labelledby="impact-title"
  class="py-16 px-4 sm:px-6 lg:px-8 bg-stone-900 text-white"
>
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h2 id="impact-title" class="text-3xl md:text-4xl font-bold mb-4">
        {title}
      </h2>
      <p class="text-lg text-stone-300 max-w-2xl mx-auto">
        {description}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      {
        stats.map((stat) => (
          <div class="bg-stone-800 rounded-lg p-6 text-center border border-stone-700 hover:border-amber-600 transition-colors">
            <stat.icon class="h-8 w-8 text-amber-400 mx-auto mb-3" />
            <div class="text-3xl font-bold text-white mb-2">{stat.value}</div>
            <div class="text-lg font-semibold text-amber-400 mb-2">
              {stat.label}
            </div>
            <p class="text-sm text-stone-300">{stat.description}</p>
          </div>
        ))
      }
    </div>

    <div class="bg-stone-800 rounded-lg p-8 border border-stone-700">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <h3 class="text-2xl font-bold mb-4">
            {latestProject}
          </h3>
          <p class="text-stone-300 mb-4 leading-relaxed">
            {projectDescription}
          </p>
          <div class="flex items-center space-x-4 text-sm">
            <span class="bg-green-600 px-2 py-1 rounded text-white font-medium">
              {completed}
            </span>
            <span class="text-stone-400">
              {funded}: $4,200
            </span>
            <span class="text-stone-400">3 {routes}</span>
          </div>
        </div>
        <img
          src="https://images.pexels.com/photos/2506923/pexels-photo-2506923.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop"
          alt="Devil's Tower climbing routes"
          loading="lazy"
          width={600}
          height={400}
          class="rounded-lg w-full h-48 object-cover"
        />
      </div>
    </div>
  </div>
</section>
