---
import { getTranslations } from '../../lib/i18/getTranslations'
import { Heart, MapPin, Users, TrendingUp } from '@lucide/astro'

const { mission } = getTranslations(Astro.params.lang)
const {
  title,
  description1,
  description2,
  communityFirst,
  communityFirstDesc,
  globalImpact,
  globalImpactDesc,
  inclusiveAccess,
  inclusiveAccessDesc,
  sustainableGrowth,
  sustainableGrowthDesc,
} = mission
---

<section
  id="mission"
  aria-labelledby="mission-title"
  class="py-16 px-4 sm:px-6 lg:px-8 bg-white dark:bg-stone-900 transition-colors"
>
  <div class="max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <h2
          id="mission-title"
          class="text-3xl md:text-4xl font-bold text-stone-900 dark:text-white mb-6"
        >
          {title}
        </h2>
        <p
          class="text-lg text-stone-600 dark:text-stone-300 mb-6 leading-relaxed"
        >
          {description1}
        </p>
        <p
          class="text-lg text-stone-600 dark:text-stone-300 mb-8 leading-relaxed"
        >
          {description2}
        </p>

        <div class="grid sm:grid-cols-2 gap-4">
          <div class="flex items-start space-x-3">
            <Heart class="h-6 w-6 text-red-500 flex-shrink-0 mt-1" />
            <div>
              <h3 class="font-semibold text-stone-900 dark:text-white">
                {communityFirst}
              </h3>
              <p class="text-sm text-stone-600 dark:text-stone-400">
                {communityFirstDesc}
              </p>
            </div>
          </div>

          <div class="flex items-start space-x-3">
            <Users class="h-6 w-6 text-blue-500 flex-shrink-0 mt-1" />
            <div>
              <h3 class="font-semibold text-stone-900 dark:text-white">
                {inclusiveAccess}
              </h3>
              <p class="text-sm text-stone-600 dark:text-stone-400">
                {inclusiveAccessDesc}
              </p>
            </div>
          </div>

          <div class="flex items-start space-x-3">
            <MapPin class="h-6 w-6 text-green-500 flex-shrink-0 mt-1" />
            <div>
              <h3 class="font-semibold text-stone-900 dark:text-white">
                {globalImpact}
              </h3>
              <p class="text-sm text-stone-600 dark:text-stone-400">
                {globalImpactDesc}
              </p>
            </div>
          </div>

          <div class="flex items-start space-x-3">
            <TrendingUp class="h-6 w-6 text-amber-500 flex-shrink-0 mt-1" />
            <div>
              <h3 class="font-semibold text-stone-900 dark:text-white">
                {sustainableGrowth}
              </h3>
              <p class="text-sm text-stone-600 dark:text-stone-400">
                {sustainableGrowthDesc}
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="relative">
        <img
          src="https://images.pexels.com/photos/2050718/pexels-photo-2050718.jpeg?auto=compress&cs=tinysrgb&w=800&h=600&fit=crop"
          alt="Climbers working together on route development"
          loading="lazy"
          width={800}
          height={600}
          class="rounded-lg shadow-lg w-full h-96 object-cover"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-stone-900/30 to-transparent rounded-lg"
        >
        </div>
      </div>
    </div>
  </div>
</section>
