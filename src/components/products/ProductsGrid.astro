---
import { getTranslations } from '../../../lib/i18/getTranslations'
import { getProducts } from '../../data/products'
import ProductCard from './ProductCard.astro'
const products = getProducts(Astro.params.lang)
const t = getTranslations(Astro.params.lang)
---

<section
  id="products"
  aria-labelledby="products-title"
  class="py-16 px-4 sm:px-6 lg:px-8 bg-stone-50 dark:bg-stone-800"
>
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h2
        id="products-title"
        class="text-3xl md:text-4xl font-bold text-stone-900 dark:text-white mb-4"
      >
        {t.products.title}
      </h2>
      <p class="text-lg text-stone-600 dark:text-stone-300 max-w-2xl mx-auto">
        {t.products.description}
      </p>
    </div>

    <div
      id="product-grid"
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
      role="tabpanel"
    >
      {products.map((product) => <ProductCard product={product} />)}
    </div>
  </div>
</section>
