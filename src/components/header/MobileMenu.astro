---
import { getTranslations } from '@utils/i18'
const { header } = getTranslations(Astro.params.lang)
const { products, mission, impact } = header
---

<div
  class="hidden md:hidden py-4 border-t border-stone-200 dark:border-stone-700"
  role="navigation"
  aria-label="Mobile navigation"
>
  <nav class="flex flex-col space-y-3" role="menu">
    <a
      href="#products"
      role="menuitem"
      class="text-stone-700 dark:text-stone-300 hover:text-amber-600 dark:hover:text-amber-400 transition-colors font-medium"
    >
      {products}
    </a>
    <a
      href="#mission"
      role="menuitem"
      class="text-stone-700 dark:text-stone-300 hover:text-amber-600 dark:hover:text-amber-400 transition-colors font-medium"
    >
      {mission}
    </a>
    <a
      href="#impact"
      role="menuitem"
      class="text-stone-700 dark:text-stone-300 hover:text-amber-600 dark:hover:text-amber-400 transition-colors font-medium"
    >
      {impact}
    </a>
  </nav>
</div>
